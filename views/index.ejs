<%- include('head.ejs') %>
<%- include('header.ejs') %>

    
        <h4>Add a new post</h4>
        <form action="/feed" method="post">
            <div class="form-group">
                <label for="exampleFormControlInput1">Name</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="name">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Message</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="message" required rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-warning">Submit Post</button>
        </form>
        <h2>Feed</h2>
        <div class="messages row">
        <% if (result.length > 0){ %>
            <% result.forEach(feed => {%>
                <div class="col-9 message">
                    <h5><%= feed.name %></h5>
                    <p><%= feed.message %></p>
                </div>
                <div class="col-3 message">
                    <p><i><%= feed.date %></i></p>
                    <a href="/feed/<%= feed._id %>">See more</a>
                </div>
        <% })} else { %>
            <h2>No feed was found</h2>
        <% } %>
        </div>
    

